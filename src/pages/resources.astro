      <section class="recursos-section">
        <h2>Líneas de Ayuda</h2>
        <div class="lineas-ayuda">
          <div class="linea-card">
            <h3>Línea de Emergencia en Adicciones</h3>
            <p class="telefono"><strong>(951) 123-4567</strong></p>
            <p>
              Atención 24/7 para situaciones de crisis relacionadas con
              adicciones.
            </p>
          </div>

          <div class="linea-card">
            <h3>Orientación y Prevención</h3>
            <p class="telefono"><strong>(951) 765-4321</strong></p>
            <p>
              Información y orientación sobre servicios de prevención y
              tratamiento.
            </p>
          </div>
        </div>
      </section>
    </div>
  </main>
</Layout>

<style>
  /* Estilos para recursos */
  .recursos-main {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  .recursos-header {
    text-align: center;
    margin-bottom: 3rem;
    padding: 2rem 0;
    background: linear-gradient(to right, rgba(var(--black), 0.05), rgba(var(--black), 0.02));
    border-radius: 12px;
  }

  .recursos-header h1 {
    font-size: 3.5rem;
    margin-bottom: 1rem;
    color: var(--accent-dark);
  }

  .recursos-header .subtitle {
    font-size: 1.4rem;
    color: rgb(var(--gray));
    max-width: 700px;
    margin: 0 auto;
  }

  .recursos-section {
    margin-bottom: 4rem;
  }

  .recursos-section h2 {
    font-size: 2.2rem;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid rgba(var(--gray-light), 1);
    color: var(--accent-dark);
  }

  /* Estilos para tarjetas de centros de atención */
  .recursos-cards {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .recurso-card {
    background-color: white;
    border-radius: 10px;
    padding: 1.5rem;
    box-shadow: var(--box-shadow);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .recurso-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(var(--gray), 40%);
  }

  .recurso-card h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--accent);
  }

  .recurso-card p {
    margin-bottom: 0.7rem;
    line-height: 1.5;
  }

  .recurso-link {
    display: inline-block;
    margin-top: 0.8rem;
    padding: 0.5rem 1rem;
    background-color: var(--accent);
    color: white;
    border-radius: 5px;
    text-decoration: none;
    font-weight: bold;
    transition: background-color 0.3s ease;
  }

  .recurso-link:hover {
    background-color: var(--accent-dark);
    color: white;
  }

  /* Estilos para documentos */
  .recursos-documentos {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .documento-card {
    background-color: white;
    border-radius: 10px;
    padding: 1.5rem;
    box-shadow: var(--box-shadow);
    display: flex;
    gap: 1rem;
    transition: transform 0.3s ease;
  }

  .documento-card:hover {
    transform: translateY(-3px);
  }

  .documento-icon {
    color: var(--accent);
    flex-shrink: 0;
  }

  .documento-content h3 {
    font-size: 1.3rem;
    margin-bottom: 0.5rem;
    color: rgb(var(--black));
  }

  .documento-content p {
    font-size: 0.95rem;
    margin-bottom: 0.7rem;
    color: rgb(var(--gray-dark));
  }

  .download-link {
    display: inline-flex;
    align-items: center;
    font-weight: 600;
    color: var(--accent);
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.2s ease;
  }

  .download-link:hover {
    color: var(--accent-dark);
    text-decoration: underline;
  }

  .download-link::after {
    content: "↓";
    margin-left: 5px;
    font-size: 1rem;
  }

  /* Estilos para líneas de ayuda */
  .lineas-ayuda {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .linea-card {
    background: linear-gradient(135deg, var(--accent-dark), var(--accent));
    color: white;
    border-radius: 10px;
    padding: 1.5rem;
    box-shadow: var(--box-shadow);
    transition: transform 0.3s ease;
  }

  .linea-card:hover {
    transform: scale(1.02);
  }

  .linea-card h3 {
    font-size: 1.4rem;
    margin-bottom: 1rem;
    color: white;
  }

  .telefono {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    letter-spacing: 1px;
  }

  .linea-card p {
    font-size: 1rem;
    opacity: 0.9;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .recursos-header h1 {
      font-size: 2.8rem;
    }
    
    .recursos-header .subtitle {
      font-size: 1.2rem;
    }
    
    .recursos-cards,
    .recursos-documentos,
    .lineas-ayuda {
      grid-template-columns: 1fr;
    }
    
    .documento-card {
      flex-direction: column;
    }
    
    .documento-icon {
      margin-bottom: 1rem;
    }
  }
</style>