---
import Layout from "../layouts/Layout.astro";
---

<Layout pageTitle="Recursos sobre Adicciones - Oaxaca" activePage="recursos">
  <main class="recursos-main">
    <div class="recursos-header">
      <h1>Recursos</h1>
      <p class="subtitle">
        Herramientas, guías y materiales sobre prevención y tratamiento de
        adicciones
      </p>
    </div>

    <div class="recursos-container">
      <section class="recursos-section">
        <h2>Centros de Atención</h2>
        <div class="recursos-cards">
          <div class="recurso-card">
            <h3>Centros de Integración Juvenil (CIJ)</h3>
            <p>
              <strong>Dirección:</strong> Calle Violetas 401, Col. Reforma, Oaxaca
              de Juárez
            </p>
            <p><strong>Teléfono:</strong> (951) 516-2130</p>
            <p>
              <strong>Servicios:</strong> Prevención, tratamiento, rehabilitación y
              orientación familiar
            </p>
            <a href="#" class="recurso-link">Más información</a>
          </div>

          <div class="recurso-card">
            <h3>Centro de Atención Primaria en Adicciones (CAPA)</h3>
            <p>
              <strong>Dirección:</strong> Av. Universidad S/N, Col. Cinco Señores,
              Oaxaca
            </p>
            <p><strong>Teléfono:</strong> (951) 501-9800</p>
            <p>
              <strong>Servicios:</strong> Detección temprana, consejería, terapia individual
              y grupal
            </p>
            <a href="#" class="recurso-link">Más información</a>
          </div>
        </div>
      </section>

      <section class="recursos-section">
        <h2>Materiales Educativos</h2>
        <div class="recursos-documentos">
          <div class="documento-card">
            <div class="documento-icon">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="36"
