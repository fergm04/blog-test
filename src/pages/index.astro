---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";
---

<Layout pageTitle="Inicio - Blog sobre Adicciones en Oaxaca">
	<section class="bg-white text-gray-900">
		<div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8 text-center">
			<h1 class="text-4xl font-bold tracking-tight sm:text-5xl">
				Adicciones en Oaxaca: Un Problema Real
			</h1>
			<p class="mt-4 text-xl text-gray-600">
				Un espacio acad√©mico para reflexionar, informar y actuar frente a las
				adicciones en el estado de Oaxaca.
			</p>
			<img
				src="images/oaxaca-hero.jpg"
				alt="Vista de Oaxaca"
				class="mt-10 rounded-lg shadow-lg w-full max-w-4xl mx-auto"
			/>
			<div class="mt-8 flex justify-center space-x-4">
				<a
					href="/blog"
					class="bg-[#1d3557] !text-white px-6 py-3 rounded-md hover:bg-[#457b9d] transition"
					>Leer el Blog</a
				>
				<a
					href="/resources"
					class="bg-gray-200 text-gray-800 px-6 py-3 rounded-md hover:bg-gray-300 transition"
					>Recursos Informativos</a
				>
			</div>
		</div>
	</section>
</Layout>
